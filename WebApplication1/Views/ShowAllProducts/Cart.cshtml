
@model IEnumerable<WebApplication1.Models.Good>
@{
    ViewData["Title"] = "Cart";
}

<br />
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Size</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    <img src=@("~/Image/" + item.Images) asp-append-version="true" style=" height:150px; width:200px; border-radius:5px; border:1px solid #efefef" />
                </td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@item.Size</td>
                <td>
                    <a asp-action="Remove" asp-controller="ShowAllProducts" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
                }
        </tbody>
    </table>
</div>

<div class="row">
    <div class="col-6">
        <a asp-action="Index" asp-controller="ShowAllProducts" class="btn btn-success"> Back To Home</a>
    </div>

    <div class="col-6 text-right">
        <h3>Total Amount</h3>
        <h3>Grant Total : @Model.Sum(c => c.Price)</h3>
        <a asp-action="Checkout" asp-controller="Orders" class="btn btn-info">on Delivery to Checkout</a>

        @{ 
            string url = "https://www.sandbox.paypal.com/cgi-bin/webscr?cmd=_xclick&amount="+(Model.Sum(c=>c.Price)/(decimal)15.67) + "&business=mouzahm@Shop.com&item_name=Plumb_Items&return=https://localhost:44389/Orders/confirm";
        }
        <a href="@url" class="btn btn-dark">Payment by Paypal</a>
    </div>
</div>

