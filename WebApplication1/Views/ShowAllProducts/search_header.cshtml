
@{
    ViewData["Title"] = "search_header";
}

<br />
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4" style="margin-bottom:15px;">
            <div class="card md-4">
                <div class="card-header h-100">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue">@item.Name</label>
                    </h4>
                </div>
                <img src=@("~/Image/"+item.Images) asp-append-version="true" alt="Card image" class="card-img-top" style="height:300px" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px;color:#a51313"><b>Price : @item.Price</b></label>
                        </div>
                        <a asp-action="Detail" asp-controller="ShowAllProducts" asp-route-id="@item.Id"
                           class="btn pull-right btn-outline-info">View Details</a>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

