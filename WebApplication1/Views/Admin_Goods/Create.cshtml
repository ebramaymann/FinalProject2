@model WebApplication1.Models.Good

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_dashboard.cshtml";
}

<div class="container">
    <h1>Create</h1>

    <h4>Good</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="Idtg" class="control-label"></label>
                    <div class="input-group">
                        <div class="input-group-append">
                            <div class="input-group-text">#</div>
                        </div>
                        <input asp-for="Idtg" class="form-control" />
                    </div>

                    <span asp-validation-for="Idtg" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label"></label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Size" class="control-label"></label>
                            <input asp-for="Size" class="form-control" />
                            <span asp-validation-for="Size" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-append">
                                    <div class="input-group-text"><i class="fas fa-dollar-sign"></i></div>
                                </div>
                                <input asp-for="Price" class="form-control" />
                            </div>

                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ExpireDate" class="control-label"></label>
                            <input asp-for="ExpireDate" class="form-control" />
                            <span asp-validation-for="ExpireDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Idoffers" class="control-label"></label>
                            <input asp-for="Idoffers" class="form-control" />
                            <span asp-validation-for="Idoffers" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ImagePath" class="control-label"></label>
                    <input asp-for="ImagePath" accept="image/*" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary btn-block" />

                </div>
                <a asp-action="Index" class="btn btn-light btn-icon-split btn-block">
                    <span class="icon text-gray-600">
                        <i class="fas fa-arrow-right"></i>
                    </span>
                    <span class="text">Back</span>
                </a>
                
            </form>
        </div>
    </div>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
